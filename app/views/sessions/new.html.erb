<h2 align="center">Login</h2>

<div class="row">
  <div class="col s12 offset-s3">
    <%= form_for :session, url: login_path do |f| %>
      <div class="row">
        <div class="input-field col s6">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="row">
        <div class="col s6 offset-s2">
          <%= f.submit "Login", class: "waves-effect waves-light btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
